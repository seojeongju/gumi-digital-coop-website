{
  "name": "gumi-digital-coop",
  "version": "1.0.0",
  "description": "구미디지털적층산업사업협동조합 공식 홈페이지",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=gumi-coop-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name gumi-digital-coop",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply gumi-coop-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply gumi-coop-db",
    "db:console:local": "wrangler d1 execute gumi-coop-db --local",
    "db:console:prod": "wrangler d1 execute gumi-coop-db",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000"
  },
  "dependencies": {
    "hono": "^4.10.2",
    "resend": "^6.4.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.9.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
